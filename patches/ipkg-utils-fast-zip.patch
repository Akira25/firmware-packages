Index: tools/ipkg-utils/patches/170-fast-zip.patch
===================================================================
--- tools/ipkg-utils/patches/170-fast-zip.patch	(Revision 0)
+++ tools/ipkg-utils/patches/170-fast-zip.patch	(Revision 0)
@@ -0,0 +1,22 @@
+--- a/ipkg-build
++++ b/ipkg-build
+@@ -246,8 +246,8 @@
+ mkdir $tmp_dir
+ 
+ echo $CONTROL > $tmp_dir/tarX
+-( cd $pkg_dir && $TAR $ogargs -X $tmp_dir/tarX -czf $tmp_dir/data.tar.gz . )
+-( cd $pkg_dir/$CONTROL && $TAR $ogargs -czf $tmp_dir/control.tar.gz . )
++( cd $pkg_dir && $TAR $ogargs -X $tmp_dir/tarX -c . | gzip --fast > $tmp_dir/data.tar.gz)
++( cd $pkg_dir/$CONTROL && $TAR $ogargs -c . | gzip --fast > $tmp_dir/control.tar.gz)
+ rm $tmp_dir/tarX
+ 
+ echo "2.0" > $tmp_dir/debian-binary
+@@ -257,7 +257,7 @@
+ if [ "$outer" = "ar" ] ; then
+   ( cd $tmp_dir && ar -crf $pkg_file ./debian-binary ./data.tar.gz ./control.tar.gz )
+ else
+-  ( cd $tmp_dir && $TAR -zcf $pkg_file ./debian-binary ./data.tar.gz ./control.tar.gz )
++  ( cd $tmp_dir && $TAR -c ./debian-binary ./data.tar.gz ./control.tar.gz | gzip --fast > $pkg_file )
+ fi
+ 
+ rm $tmp_dir/debian-binary $tmp_dir/data.tar.gz $tmp_dir/control.tar.gz
